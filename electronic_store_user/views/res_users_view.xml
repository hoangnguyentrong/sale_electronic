<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_users_form_inherit_sales_electronic" model="ir.ui.view">
            <field name="name">view.users.form.inherit.sales.electronic</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
               <xpath expr="//button[@name='action_show_groups']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_show_accesses']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_show_rules']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div/field[@name='partner_id'][1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//h2/field[@name='login']" position="after">
                    <group>
                        <field name="phone" widget="phone"/>  
                        <!-- <field name="id_card" string="CMND"/>   -->
                    </group>
                </xpath>
                <xpath expr="//group/field[@name='company_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group/field[@name='company_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='preferences'][1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>